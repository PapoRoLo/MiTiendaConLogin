@model IEnumerable<MiTiendaConLogin.Models.Product>

@{
    ViewData["Title"] = "Gestionar Productos";
}

<div style="color: #e0e6f1;"> 
    <h1 class="my-4">Gestionar Productos</h1>

    <p>
        <a asp-action="Create" class="btn btn-success mb-3">
            <i class="fas fa-plus"></i> Crear Nuevo Producto
        </a>
    </p>
</div>

<table class="table table-dark table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th> Imagen </th>
            <th>
                @Html.DisplayNameFor(model => model.Stock)
            </th>
            <th>Acciones</th> 
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <img src="@item.ImageUrl" alt="@item.Name" style="width: 75px; height: 75px; object-fit: cover; border-radius: 5px;" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stock)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-info">Editar</a> 
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">Detalles</a> 
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>