@model MiTiendaConLogin.Models.Product

@{
    ViewData["Title"] = "Editar Producto";
}

<style>
    .card-futuristic {
        background: linear-gradient(135deg, #1f2a40, #0a0e14);
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
        color: #e0e6f1;
        padding: 30px;
        border: 1px solid #0056b3;
    }
    .card-futuristic h4,
    .card-futuristic label {
        color: #e0e6f1;
    }
    .card-futuristic .form-control,
    .card-futuristic .form-control:focus {
        background-color: rgba(31, 42, 64, 0.7);
        border: 1px solid #007bff;
        color: #e0e6f1;
        border-radius: 8px;
    }
    .card-futuristic .form-control::placeholder {
        color: #a0a8b9;
    }
    .card-futuristic .form-control[type="file"] {
        background-color: rgba(31, 42, 64, 0.7);
    }
    .card-futuristic .btn-primary {
        background: linear-gradient(90deg, #007bff, #0056b3);
        border: none;
        border-radius: 8px;
        padding: 10px 20px;
        font-weight: bold;
        transition: all 0.3s ease;
    }
    .card-futuristic .btn-primary:hover {
        background: linear-gradient(90deg, #0056b3, #007bff);
        box-shadow: 0 5px 15px rgba(0, 123, 255, 0.4);
    }
</style>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-7">
            
            <div class="card card-futuristic mt-5">
                <h4 class="my-3 text-center">Editar Producto</h4>

                <form asp-action="Edit" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="ImageUrl" /> <div class="form-floating mb-3">
                        <input asp-for="Name" class="form-control" placeholder="Nombre" />
                        <label asp-for="Name" style="color: #a0a8b9;"></label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Price" class="form-control" placeholder="Precio" />
                        <label asp-for="Price" style="color: #a0a8b9;"></label>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Stock" class="form-control" placeholder="Stock" type="number" />
                        <label asp-for="Stock" style="color: #a0a8b9;"></label>
                        <span asp-validation-for="Stock" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ImageFile" class="form-label">Cambiar Imagen</label>
                        <input asp-for="ImageFile" class="form-control" type="file" accept="image/*" />
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Imagen Actual</label><br/>
                        <img src="@Model.ImageUrl" width="100" class="img-thumbnail bg-dark border-info" />
                    </div>

                    <div class="form-group mt-4">
                        <input type="submit" value="Guardar Cambios" class="btn btn-primary w-100" />
                        <a asp-action="Index" class="btn btn-secondary w-100 mt-2">Volver a la Lista</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>