@model MiTiendaConLogin.Models.Product

@{
    ViewData["Title"] = "Editar Producto";
}

<div class="container text-light">
    <h1 class="text-light">Editar Producto</h1>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                
                <div class="form-floating mb-3">
                    <input asp-for="Name" class="form-control bg-dark text-light" placeholder="Nombre" style="background-color: #2c2f33 !important; color: #fff !important; border-color: #555;" />
                    <label asp-for="Name" class="form-label" style="color: #a0a8b9;"></label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <select asp-for="CategoryId" class="form-select bg-dark text-light" 
                            asp-items="ViewBag.CategoryId"
                            style="background-color: #2c2f33 !important; color: #fff !important; border-color: #555;">
                        <option value="">-- Seleccionar Categor√≠a --</option>
                    </select>
                    <label asp-for="CategoryId" class="form-label" style="color: #a0a8b9;"></label>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Price" class="form-control bg-dark text-light" placeholder="Precio" style="background-color: #2c2f33 !important; color: #fff !important; border-color: #555;" />
                    <label asp-for="Price" class="form-label" style="color: #a0a8b9;"></label>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                
                <div class="mb-3">
                    <label class="form-label" style="color: #a0a8b9;">Subir Imagen (Opcional)</label>
                    <img src="@Model.ImageUrl" class="img-thumbnail" style="max-width: 200px;" alt="Imagen actual">
                    <input type="file" name="ImageFile" class="form-control bg-dark text-light" style="background-color: #2c2f33 !important; color: #fff !important; border-color: #555;" />
                </div>
                
                <div class="form-floating mb-3">
                    <input asp-for="Stock" class="form-control bg-dark text-light" placeholder="Stock" style="background-color: #2c2f33 !important; color: #fff !important; border-color: #555;" />
                    <label asp-for="Stock" class="form-label" style="color: #a0a8b9;"></label>
                    <span asp-validation-for="Stock" class="text-danger"></span>
                </div>
                
                <div class="form-group mt-3">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                    <a asp-controller="Products" asp-action="Index" class="btn btn-outline-light">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}