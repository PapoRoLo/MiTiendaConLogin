@model MiTiendaConLogin.Models.Product

@{
    ViewData["Title"] = "Detalles del Producto";
}

<style>
    .card-futuristic {
        background: linear-gradient(135deg, #1f2a40, #0a0e14);
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
        color: #e0e6f1;
        padding: 30px;
        border: 1px solid #0056b3;
    }
    .card-futuristic h4 {
        color: #e0e6f1;
    }
    /* Estilo para la lista de detalles */
    .details-list dt {
        color: #00bfff; /* Color azul para el "t√≠tulo" */
        font-weight: bold;
        text-shadow: 0 0 5px rgba(0, 191, 255, 0.8);
    }
    .details-list dd {
        color: #e0e6f1; /* Color claro para el "valor" */
        margin-left: 20px;
        font-size: 1.1em;
    }
</style>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-7">
            
            <div class="card card-futuristic mt-5">
                <h4 class="my-3 text-center">Detalles del Producto</h4>
                <hr style="background-color: #0056b3; height: 2px;" />

                <div class="card-body">
                    <div class="text-center mb-4">
                        <img src="@Model.ImageUrl" class="img-fluid rounded shadow-lg" alt="@Model.Name" style="max-height: 300px; border: 2px solid #007bff;" />
                    </div>
                    
                    <dl class="row details-list">
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Name)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Name)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Price)
                        </dt>
                        <dd class="col-sm-9">
                            @Model.Price.ToString("C", new System.Globalization.CultureInfo("es-CO"))
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Stock)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Stock)
                        </dd>
                    </dl>
                </div>

                <div class="card-footer bg-transparent border-0 text-center">
                    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-info">Editar</a>
                    <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
                </div>
            </div>
        </div>
    </div>
</div>