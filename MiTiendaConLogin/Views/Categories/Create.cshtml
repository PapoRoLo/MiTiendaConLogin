@model MiTiendaConLogin.Models.Category

@{
    ViewData["Title"] = "Crear Categoría";
}

<div class="container text-light">
    <h1 class="text-light">Crear Categoría</h1>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="form-floating mb-3">
                    <input asp-for="Name" class="form-control bg-dark text-light" placeholder="Nombre" style="background-color: #2c2f33 !important; color: #fff !important; border-color: #555;" />
                    <label asp-for="Name" class="form-label" style="color: #a0a8b9;"></label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                
                <div class="form-group mt-3">
                    <input type="submit" value="Crear" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-outline-light">Volver a la Lista</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}