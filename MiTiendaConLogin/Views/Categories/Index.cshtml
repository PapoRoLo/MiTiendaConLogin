@model IEnumerable<MiTiendaConLogin.Models.Category>

@{
    ViewData["Title"] = "Categorías";
}

<div class="container text-light">
    <h1 class="text-light">Categorías de Productos</h1>

    <p class="mb-3">
        <a asp-action="Create" class="btn btn-primary">Crear Nueva Categoría</a>
    </p>

    <table class="table table-dark table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td class="text-end">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-light">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Detalles</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Borrar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>