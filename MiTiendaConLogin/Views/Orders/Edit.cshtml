@model MiTiendaConLogin.Controllers.OrdersController.OrderEditViewModel

@{
    ViewData["Title"] = "Actualizar Estado del Pedido";
}

<h1 class="text-light">Actualizar Estado del Pedido</h1>

<hr />
<div class="row text-light">
    <div class="col-md-8">

        <h4 class="mb-3">Pedido #@Model.Id</h4>
        <dl class="row">
            <dt class="col-sm-3">Cliente:</dt>
            <dd class="col-sm-9">@Model.CustomerEmail</dd>

            <dt class="col-sm-3">Fecha:</dt>
            <dd class="col-sm-9">@Model.OrderDate.ToString("g")</dd>
        </dl>

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-3">
                <label asp-for="Status" class="control-label h5">Estado del Pedido</label>
                <select asp-for="Status" class="form-control" asp-items="@Model.StatusList"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Guardar Cambios" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>

    </div>
</div>