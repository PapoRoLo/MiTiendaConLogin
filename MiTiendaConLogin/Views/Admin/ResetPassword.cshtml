@model dynamic

@{
    ViewData["Title"] = "Resetear Contraseña";
}

<style>
    .card-futuristic {
        background: linear-gradient(135deg, #1f2a40, #0a0e14);
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
        color: #e0e6f1;
        padding: 30px;
        border: 1px solid #0056b3;
    }

        .card-futuristic h4,
        .card-futuristic h5,
        .card-futuristic label,
        .card-futuristic p,
        .card-futuristic a {
            color: #e0e6f1;
        }

        .card-futuristic .form-control {
            background-color: rgba(31, 42, 64, 0.7);
            border: 1px solid #007bff;
            color: #e0e6f1;
            border-radius: 8px;
        }

            .card-futuristic .form-control::placeholder {
                color: #a0a8b9;
            }

        .card-futuristic .btn-danger { /* Estilo para el botón de reseteo */
            font-weight: bold;
            transition: all 0.3s ease;
        }

            .card-futuristic .btn-danger:hover {
                box-shadow: 0 5px 15px rgba(220, 53, 69, 0.4);
            }
</style>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">

            <div class="card card-futuristic mt-5">
                <h4 class="my-3 text-center">Resetear Contraseña</h4>
                <h5 class="mb-3 text-center" style="color: #00bfff;">@Model.Email</h5>

                <form method="post" asp-controller="Admin" asp-action="ResetPassword">

                    <div asp-validation-summary="All" class="text-danger mb-3" role="alert"></div>

                    <input type="hidden" name="userId" value="@Model.UserId" />

                    <div class="form-floating mb-3">
                        <input name="newPassword" type="password" class="form-control" placeholder="Nueva Contraseña" />
                        <label for="newPassword" style="color: #a0a8b9;">Nueva Contraseña</label>
                    </div>

                    <button type="submit" class="btn btn-lg btn-danger w-100">Forzar Reseteo</button>
                    <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary w-100 mt-2">Cancelar</a>
                </form>
            </div>
        </div>
    </div>
</div>