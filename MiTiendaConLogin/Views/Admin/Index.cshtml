@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>

@{
    ViewData["Title"] = "Panel de Administrador";
}

<div class="container" style="color: #e0e6f1;">
    <h1 class="my-4">Panel de Administrador</h1>
    <h3 class="mb-3">Gestionar Usuarios</h3>

    <table class="table table-dark table-striped table-hover">
        <thead>
            <tr>
                <th>ID de Usuario</th>
                <th>Email / Nombre de Usuario</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Email</td>
                    <td>
                        <a asp-controller="Admin" 
                           asp-action="ResetPassword" 
                           asp-route-id="@user.Id" 
                           class="btn btn-sm btn-warning">
                            Resetear Contraseña
                        </a>
                        </td>
                    <td>@user.Email</td>
                    <td>
                        <a asp-controller="Admin" 
                        asp-action="ResetPassword" 
                        asp-route-id="@user.Id" 
                        class="btn btn-sm btn-warning">
                            Resetear Contraseña
                        </a>

                        <a asp-controller="Admin" 
                        asp-action="ManageUserRoles" 
                        asp-route-userId="@user.Id" 
                        class="btn btn-sm btn-info">
                            Gestionar Roles
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>