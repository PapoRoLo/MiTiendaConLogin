@model MiTiendaConLogin.Models.ManageUserRolesViewModel

@{
    ViewData["Title"] = "Gestionar Roles";
}

<div class="container" style="color: #e0e6f1;">
    <h1 class="my-4">Gestionar Roles</h1>
    <h4 class="mb-3">Asignando roles para: <strong>@Model.Email</strong></h4>

    <div class="row">
        <div class="col-md-6">
            <form method="post">
                <input type="hidden" asp-for="UserId" />
                <input type="hidden" asp-for="Email" />

                <div class="card bg-dark shadow-sm">
                    <div class="card-body">
                        @for (int i = 0; i < Model.Roles.Count; i++)
                        {
                            <div class="form-check m-2">
                                <input type="hidden" asp-for="Roles[i].RoleId" />
                                <input type="hidden" asp-for="Roles[i].RoleName" />

                                <input asp-for="Roles[i].IsSelected" class="form-check-input" />
                                <label class="form-check-label" asp-for="Roles[i].IsSelected">
                                    @Model.Roles[i].RoleName
                                </label>
                            </div>
                        }
                    </div>
                </div>

                <button type="submit" class="btn btn-lg btn-success mt-3">Guardar Cambios</button>
                <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary mt-3">Cancelar</a>
            </form>
        </div>
    </div>
</div>