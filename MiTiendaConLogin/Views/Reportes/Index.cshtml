@model MiTiendaConLogin.Models.ReportViewModel
@using MiTiendaConLogin.Helpers

@{
    ViewData["Title"] = "Reportes de Ventas";
    // Para la validación de fecha máxima en los calendarios
    string maxDate = DateTime.Today.ToString("yyyy-MM-dd");
}

<div class="container text-light">
    
    <h1 class="text-light">@ViewData["Title"]</h1>
    <p class="text-muted">Resumen de la actividad de pedidos completados.</p>
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-dark border-secondary text-light h-100">
                <div class="card-body text-center">
                    <h5 class="card-title text-muted">Ventas (Hoy)</h5>
                    <h2 class="text-success">@Model.DefaultSummary.SalesToday.ToString("C")</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-dark border-secondary text-light h-100">
                <div class="card-body text-center">
                    <h5 class="card-title text-muted">Ventas (Semana)</h5>
                    <h2 class="text-info">@Model.DefaultSummary.SalesThisWeek.ToString("C")</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-dark border-secondary text-light h-100">
                <div class="card-body text-center">
                    <h5 class="card-title text-muted">Ventas (Mes)</h5>
                    <h2 class="text-primary">@Model.DefaultSummary.SalesThisMonth.ToString("C")</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-dark border-secondary text-light h-100">
                <div class="card-body text-center">
                    <h5 class="card-title text-muted">Órdenes (Mes)</h5>
                    <h2 class="text-warning">@Model.DefaultSummary.TotalOrdersThisMonth</h2>
                </div>
            </div>
        </div>
    </div>
    
    <hr/>

    <h2 class="text-light">Consultas Personalizadas</h2>
    <div class="row">
        
        <div class="col-md-6">
            <div class="card bg-dark border-secondary text-light">
                <div class="card-body">
                    <h5 class="card-title">Reporte por Día</h5>
                    <form asp-action="Index" method="post">
                    @Html.AntiForgeryToken()
                        <div class="mb-3">
                            <label class="form-label">Selecciona un día:</label>
                            <input type="date" name="customDate" class="form-control bg-dark text-light" max="@maxDate" required 
                                   style="background-color: #2c2f33 !important; color: #fff !important; border-color: #555;"/>
                        </div>
                        <button type="submit" class="btn btn-primary">Generar Reporte</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card bg-dark border-secondary text-light">
                <div class="card-body">
                    <h5 class="card-title">Reporte por Rango de Fechas</h5>
                    <form asp-action="Index" method="post">
                    @Html.AntiForgeryToken()
                        <div class="row">
                            <div class="col-6 mb-3">
                                <label class="form-label">Desde:</label>
                                <input type="date" name="startDate" class="form-control bg-dark text-light" max="@maxDate" required 
                                       style="background-color: #2c2f33 !important; color: #fff !important; border-color: #555;"/>
                            </div>
                            <div class="col-6 mb-3">
                                <label class="form-label">Hasta:</label>
                                <input type="date" name="endDate" class="form-control bg-dark text-light" max="@maxDate" required 
                                       style="background-color: #2c2f33 !important; color: #fff !important; border-color: #555;"/>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary">Generar Reporte</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @if (Model.CustomResult != null)
    {
        <hr class="mt-4"/>
        <h2 class="text-light mt-4">Resultados de la Consulta</h2>
        <p class="text-muted">
            Mostrando resultados para 
            <strong>@Model.CustomResult.StartDate.ToShortDateString()</strong> 
            hasta <strong>@Model.CustomResult.EndDate.ToShortDateString()</strong>
        </p>

        <div class="row mb-4">
            <div class="col-md-6">
                <div class="card bg-dark border-secondary text-light h-100">
                    <div class="card-body text-center">
                        <h5 class="card-title text-muted">Ventas Totales (Rango)</h5>
                        <h2 class="text-success">@Model.CustomResult.TotalSales.ToString("C")</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card bg-dark border-secondary text-light h-100">
                    <div class="card-body text-center">
                        <h5 class="card-title text-muted">Órdenes Totales (Rango)</h5>
                        <h2 class="text-warning">@Model.CustomResult.TotalOrders</h2>
                    </div>
                </div>
            </div>
        </div>
        
        <h3 class="text-light">Productos Más Vendidos (en este Rango)</h3>
        <table class="table table-dark table-striped table-hover">
            <thead>
                <tr>
                    <th>Producto</th>
                    <th class="text-end">Total Vendido</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model.CustomResult.TopProducts)
                {
                    <tr>
                        <td>@product.ProductName</td>
                        <td class="text-end">@product.TotalSold</td>
                    </tr>
                }
                @if (!Model.CustomResult.TopProducts.Any())
                {
                    <tr>
                        <td colspan="2" class="text-center text-muted">No se encontraron ventas de productos en este rango.</td>
                    </tr>
                }
            </tbody>
        </table>
        <h3 class="text-light mt-5">Detalle de Órdenes Individuales</h3>

    <table class="table table-dark table-striped table-hover">
        <thead>
            <tr>
                <th>ID Pedido</th>
                <th>Fecha (Hora Local)</th>
                <th>Cliente</th>
                <th class="text-end">Total</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model.IndividualOrders)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>
                        @TimeZoneHelper.ToCostaRicaTime(order.OrderDate).ToString("g")
                    </td>
                    <td>@order.CustomerEmail</td>
                    <td class="text-end">@order.Total.ToString("C")</td>
                    <td>
                        <a asp-controller="Orders" asp-action="Details" asp-route-id="@order.Id" class="btn btn-info btn-sm">
                            Ver Detalles
                        </a>
                    </td>
                </tr>
            }
            @if (!Model.IndividualOrders.Any())
            {
                <tr>
                    <td colspan="5" class="text-center text-muted">
                        No se encontraron órdenes para este rango.
                    </td>
                </tr>
            }
        </tbody>
    </table>
    }

</div>