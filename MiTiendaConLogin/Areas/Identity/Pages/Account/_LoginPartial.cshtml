@using Microsoft.AspNetCore.Identity
@using MiTiendaConLogin.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    var user = await UserManager.GetUserAsync(User);
    var welcomeMessage = !string.IsNullOrEmpty(user?.Nombre) ? user.Nombre : User.Identity?.Name;
    
    <li class="nav-item">
        <a id="manage" class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" style="color: #00bfff !important;">
            Bienvenido, @welcomeMessage
        </a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link" style="color: #e0e6f1 !important;">Cerrar sesión</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link" id="register" asp-area="Identity" asp-page="/Account/Register" style="color: #e0e6f1 !important;">Registrarse</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="login" asp-area="Identity" asp-page="/Account/Login" style="color: #e0e6f1 !important;">Iniciar sesión</a>
    </li>
}
</ul>